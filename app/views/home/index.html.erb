  <%= render :partial => "last_uploaded", :locals => {:songs => @ten_latest_songs}%>
</div>
<div class = "disp" id = "Playlists">
  <%= render :partial => "popular_playlists", :locals => {:playlists => @most_popular_playlists}%>
</div>
<div class = "disp" id = "Songs">
  <%= render :partial => "popular_songs", :locals => {:songs => @most_popular_songs}%>
</div>
<div class = "disp" id = "Users">
  <%= render :partial => "popular_users", :locals => {:users => @most_popular_users}%>
</div>