<div class="btn-group btn-group-justified" role="group" aria-label="...">
  <div class="btn-group" role="group">
    <%= link_to "Latest Songs Uploaded", home_index_path(folder: "Latest"), method: :get, id: "LatestLink", name: "folder", :class => "btn btn-default", remote: true%>
  </div>
  <div class="btn-group" role="group">
    <%= link_to "Popular playlists", home_index_path(folder: "Playlists"), method: :get, id: "PlayliststLink", name: "folder", :class => "btn btn-default", remote: true%>
  </div>
  <div class="btn-group" role="group">
    <%= link_to "Popular songs", home_index_path(folder: "Songs"), method: :get, id: "SongsLink", name: "folder", :class => "btn btn-default", remote: true%>
  </div>
  <div class="btn-group" role="group">
    <%= link_to "Popular users", home_index_path(folder: "Users"), method: :get, id: "UsersLink", name: "folder", :class => "btn btn-default", remote: true%>
  </div>
</div>
<%= render :partial => "tag_cloud", :locals => {:songs_tags => @songs_tags, :playlists_tags => @playlists_tags}%>
