<table>
<tr>
  <td class = "align-right">
  <% if(@playlists == []) %>
        <% if(!current_user || current_user.id != params[:user_id].to_i) %>
            <p><strong><%= @user.name %> <%= t('didnt_create_playlist_yet') %>.</strong></p>
        <% else %>
            <p><strong><%= t('you_didnt_create_playlist_yet') %>.</strong></p>
        <% end %>
    <% end %>
  </td>
  <td>
    <% if(current_user && current_user.id == params[:user_id].to_i) %>
     <%= link_to " " + t("create"), user_playlists_path(current_user.id), method: :post, :class => "btn btn-info btn-lg glyphicon glyphicon-plus"%>
    <%end%>
  </td>
</tr>
</table>
<br>
  <% if(@playlists != []) %>
    <% if(!current_user || current_user.id != params[:user_id].to_i) %>
        <p><strong>Playlists by <%= @user.name %>.</strong></p>
    <% end %>
      <% @playlists.each do |playlist| %>
        <%= render :partial => "show", :locals => {:playlist => playlist} %>
     <% end %>
  <% end %>
