<!DOCTYPE html>
<html>
<head>
  <title>MusicShare</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <a class="navbar-brand" href=""><b>Music Share</b></a>
    <div class="navbar-collapse collapse">
        <form class="navbar-form navbar-left">
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Search">
          </div>
          <button type="submit" class="btn btn-default">Find</button>
        </form>

        <ul class="nav navbar-nav navbar-right">
          <% if current_user %>

              <ul class="nav navbar-nav">
                <li class="navbar-text">Signed in with <strong><%= current_user.provider %></strong> as <strong><%= current_user.name %></strong></li>
                <li><img src = <%= current_user.image %> /></li>
                <li><%= link_to "Sign out", signout_path, id: "Sign out" %></li>
              </ul>
          <% else %>
              <ul class="nav navbar-nav btn-toolbar ">
                  <li class="btn btn-social-icon btn-facebook">
                    <i class="fa fa-facebook"></i>
                    <%= link_to "", "/auth/facebook", id: "sign_in" %>
                  </li>
                  <li class="btn btn-social-icon btn-twitter">
                    <i class="fa fa-twitter"></i>
                    <%= link_to "", "/auth/twitter", id: "sign_in" %>
                  </li>
                  <li class="btn btn-social-icon btn-vk">
                    <i class="fa fa-vk"></i>
                    <%= link_to "", "/auth/vkontakte", id: "sign_in" %>
                  </li>
              </ul>
          <% end %>
        </ul>
      </div>
  </div>
</nav>
<% if current_user %>
<div class="panel">
  <ul class="nav nav-pills">
    <li role="presentation"><%= link_to "Songs", songs_path%></li>
    <li role="presentation"><%= link_to "Playlists", playlists_path%></li>
    <li role="presentation"><%= link_to "Bookmarks", ""%></li>
  </ul>
</div>
    <% end %>
<%= yield %>

</body>
</html>
